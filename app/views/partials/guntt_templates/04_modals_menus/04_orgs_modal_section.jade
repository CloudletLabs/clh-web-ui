section.resource-modal-main
    #organizations.modal.fade
        .modal-dialog.modal-lg
            .modal-contents
                .modal-body.resource-modal-block

                    // ORGANIZATIONS MODAL MENU MAIN SECTION START
                    section.resource-main-menu
                        .res-modal-header
                            div
                                span(style='color: #C9CFDD') ORGANIZATIONS
                            div
                                a(data-dismiss='modal', style='cursor: pointer;', directive-slide-hide-org='', directive-blind-close-org='')
                                    img.close-btn(src='../img/guntt/modal-menu/close-t.png', alt='close', width='24px', height='25px', ng-click='organizationEditMenuClose()')
                        .res-modal-body
                            // res-modal-unit-block-ORGANIZATIONS START
                            .res-modal-unit-block(ng-repeat='org in userOrgCollection.userOrgList')
                                .res-modal-unit-block-top
                                    .res-modal-unit-name
                                        span(style='font-weight: bold; ') {{org.orgName}}
                                    .res-modal-unit-edit
                                        button(ng-click='organizationEditMenuOpen($index)', ng-hide='OrganizationEditMenuOpenStatus', directive-slide-show-org='') edit
                                    .res-modal-unit-del(ng-hide='OrganizationEditMenuOpenStatus')
                                        a(style='cursor: pointer;', ng-click='orgRemovePannelShow=!orgRemovePannelShow')
                                            img.close-btn(src='../img/guntt/modal-menu/delete.png', alt='deletePanelShow', width='24px')
                                .res-modal-unit-block-bottom.text-center(ng-show='orgRemovePannelShow')
                                    h4 Remove this organization completely?
                                    .del-confirm-buttons
                                        .del-confirm-cancel
                                            a(ng-click='orgRemovePannelShow=false')
                                                img.close-btn(src='../img/guntt/modal-menu/cancel-t.png', alt='cancel', width='24px', height='24px')
                                        .del-confirm-ok
                                            a(ng-click='removeOrganization($index)')
                                                img.confirm-btn(src='../img/guntt/modal-menu/ok-t.png', alt='ok', width='24px')
                            // organizations-modal-unit-block-GROUP END
                        .res-modal-footer
                            .text-center(ng-hide='OrganizationEditMenuOpenStatus')
                                span add new organization
                                br
                                input.add-res-input(type='text', name='addRes', value='', ng-model='newOrgName', ng-minlength='3', ng-maxlength='17', placeholder='')
                            .add-res-confirm(ng-hide='OrganizationEditMenuOpenStatus')
                                a(ng-click='addNewOrganization(newOrgName)', style='cursor: pointer;')
                                    img.confirm-btn(src='../img/guntt/modal-menu/add.png', title='addRes', width='34\
                      px')
                    // ORGANIZATIONS MODAL MENU MAIN SECTION END

                    // ORGANIZATIONS MODAL MENU EDIT SECTION START
                    section.resource-main-menu-edit.slide-menu-org(hidden='hidden')
                        header.res-modal-edit-header
                            div
                                span(style='color: #C9CFDD')
                                    | ORGANIZATION:
                                    span(style='font-weight: bold;')
                                        | {{userOrgCollection.userOrgList[currentOrganizationEditMenuOpen.orgIndex].orgName}}
                                    |                                        >Edit
                            div
                                a(style='cursor: pointer;', ng-click='organizationEditMenuClose()', directive-slide-hide-org='', directive-blind-close-org='')
                                    img.close-btn(src='../img/guntt/modal-menu/close-t.png', alt='close', width='24px', height='25px')
                        .res-modal-edit-body
                            .res-modal-edit-body-header
                                div
                                    .res-modal-edit-body-header-name
                                        span(style='')
                                            | {{userOrgCollection.userOrgList[currentOrganizationEditMenuOpen.orgIndex].orgName}}
                                    .res-modal-edit-body-header-rename-btn
                                        button.modal-menu-btn(directive-blind-show-org='') rename
                                hr
                                // !
                                section.res-modal-edit-body-header-remame-form.blind-show-org(hidden='hidden')
                                    span(for='groupRenameInput') Enter new organization name
                                    input#groupRenameInput.res-remane-input(type='text', placeholder='{{userOrgCollection.userOrgList[currentOrganizationEditMenuOpen.orgIndex].orgName}}', ng-model='groupRenameInput', ng-minlength='2', ng-maxlength='17')
                                    a(ng-click='applyOrgEditNewName(groupRenameInput)', style='cursor: pointer;')
                                        img.confirm-btn(src='../img/guntt/modal-menu/ok-t.png', alt='ok', width='30px')
                                    .res-modal-edit-body-header-back
                                        a(directive-blind-show-org='')  back
                            // modal-body-header end
                            // organization-modal-EDIT-ROLE-block START
                            .res-modal-edit-type-block
                                .res-modal-edit-type-block-top
                                    .res-modal-edit-block-top-name
                                        span Membership
                                    .res-modal-unit-edit(style='position: relative;top: -7px;')
                                        button(directive-blind-mem-show='') edit
                                // !
                                section.res-modal-edit-type-block-bottom.blind-show-mem(hidden='hidden')
                                    // ORG ROLES CHNGE SUB-MENU START
                                    .res-edit-category
                                        // MAIN USER role edit block in org-edit-menu START
                                        .org-modal-edit-body-header
                                            div
                                                .org-modal-edit-body-header-name
                                                    span(style='') {{user.userName}},
                                                    span(title='{{userOrgCollection.userOrgList[currentOrganizationEditMenuOpen.orgIndex].orgRole}}', style='font-size: 110%;')
                                                        | {{userOrgCollection.userOrgList[currentOrganizationEditMenuOpen.orgIndex].orgRole}}
                                                .org-modal-edit-body-header-role-btn
                                                    button.modal-menu-btn(ng-click='roleBtnTrigger=!roleBtnTrigger') role
                                            hr.hr-org-role-edit
                                            // !
                                            .org-modal-edit-body-header-role-form(ng-show='roleBtnTrigger')
                                                ul.role-chbx-div(ng-repeat='role in userOrgCollection.userOrgRolesCollection')
                                                    li
                                                        input.checkbox(type='radio', id='role{{$index}}', name='roleUser', ng-checked='(userOrgCollection.userOrgList[currentOrganizationEditMenuOpen.orgIndex].orgRole == role)? true:false', value='{{role}}', ng-model='$parent.userSelectedRole')
                                                        label(for='role{{$index}}')
                                                            span(title='{{role}}') {{role}}
                                                .org-modal-edit-body-header-back
                                                    a(ng-click='roleBtnTrigger=false')  back
                                                    a(ng-click='userOrgEditRoleChange(userSelectedRole)', style='cursor: pointer; float: right;')
                                                        img.confirm-btn(src='../img/guntt/modal-menu/ok-t.png', alt='ok', width='30px')
                                        // MAIN USER role edit block in org-edit-menu END
                                        // RESOURCE role edit block in org-edit-menu START
                                        .org-modal-edit-body-header(ng-repeat='resource in userResourceCollection')
                                            div
                                                .org-modal-edit-body-header-name
                                                    span(style='') {{resource.resName}},
                                                    span(title='{{resource.resOrg[currentOrganizationEditMenuOpen.orgIndex].orgRole}}', style='font-size: 110%;')
                                                        | {{resource.resOrg[currentOrganizationEditMenuOpen.orgIndex].orgRole}}
                                                .org-modal-edit-body-header-role-btn
                                                    button.modal-menu-btn(ng-click='resRoleBtnTrigger$index=!resRoleBtnTrigger$index') role
                                            hr.hr-org-role-edit
                                            // !
                                            .org-modal-edit-body-header-role-form(ng-show='resRoleBtnTrigger$index')
                                                ul.role-chbx-div(ng-repeat='role in userOrgCollection.userOrgRolesCollection')
                                                    li
                                                        input.checkbox(type='radio', id='roleres{{$index}}{{resource.resId}}', name='roleRes{{resource.resId}}', ng-checked='(resource.resOrg[currentOrganizationEditMenuOpen.orgIndex].orgRole == role)? true : false', value='{{role}}', ng-model='$parent.resSelectedRole')
                                                        label(for='roleres{{$index}}{{resource.resId}}')
                                                            span(title='{{role}}') {{role}}
                                                .org-modal-edit-body-header-back
                                                    a(ng-click='resRoleBtnTrigger$index=false')  back
                                                    a(ng-click='resOrgEditRoleChange(resSelectedRole, $index)', style='cursor: pointer; float: right;')
                                                        img.confirm-btn(ng-click='resRoleBtnTrigger$index=false', src='../img/guntt/modal-menu/ok-t.png', alt='ok', width='30px')
                                        // RESOURCE role edit block in org-edit-menu END
                                        .org-modal-edit-body-header-back(width='300px')
                                            a(directive-blind-mem-show='')  back
                                            a
                                    // ORG ROLES CHNGE SUB-MENU END
                            // organization-modal-EDIT-ROLE-block END
                    // ORGANIZATIONS MODAL MENU EDIT SECTION END